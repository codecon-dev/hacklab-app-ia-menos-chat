<% content_for :title, t('devise.registrations.new.title', default: 'Sign up') %>

<div class="hero min-h-screen bg-base-200">
  <div class="hero-content flex-col">
    <div class="text-center mb-4">
      <h1 class="text-5xl font-bold">üçΩÔ∏è Macedo</h1>
      <p class="py-6"><%= t('devise.registrations.new.subtitle', default: 'Create your account and start managing your dishes') %></p>
    </div>

    <div class="card w-[600px] shadow-2xl bg-base-100">
      <div class="card-body">
        <h2 class="card-title text-2xl mb-4"><%= t('devise.registrations.new.sign_up', default: 'Sign up') %></h2>

        <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
          <%= render "devise/shared/error_messages", resource: resource %>

          <div class="form-control">
            <label class="label">
              <span class="label-text"><%= t('activerecord.attributes.user.email', default: 'Email') %></span>
            </label>
            <%= f.email_field :email, autofocus: true, autocomplete: "email", class: "input input-bordered", placeholder: t('devise.registrations.new.email_placeholder', default: 'your@email.com') %>
          </div>

          <div class="form-control mt-4">
            <label class="label">
              <span class="label-text"><%= t('activerecord.attributes.user.password', default: 'Password') %></span>
              <% if @minimum_password_length %>
                <span class="label-text-alt">(<%= t('devise.registrations.new.minimum_password_length', count: @minimum_password_length, default: '%{count} characters minimum') %>)</span>
              <% end %>
            </label>
            <%= f.password_field :password, autocomplete: "new-password", class: "input input-bordered", placeholder: "‚Ä¢‚Ä¢‚Ä¢‚Ä¢‚Ä¢‚Ä¢‚Ä¢‚Ä¢" %>
          </div>

          <div class="form-control mt-4">
            <label class="label">
              <span class="label-text"><%= t('activerecord.attributes.user.password_confirmation', default: 'Confirm password') %></span>
            </label>
            <%= f.password_field :password_confirmation, autocomplete: "new-password", class: "input input-bordered", placeholder: "‚Ä¢‚Ä¢‚Ä¢‚Ä¢‚Ä¢‚Ä¢‚Ä¢‚Ä¢" %>
          </div>

          <div class="form-control mt-6">
            <%= f.submit t('devise.registrations.new.submit', default: 'Sign up'), class: "btn btn-primary w-full" %>
          </div>
        <% end %>

        <div class="divider"><%= t('common.or', default: 'OR') %></div>

        <div class="text-center">
          <%= link_to t('devise.shared.links.sign_in', default: 'Already have an account'), new_session_path(resource_name), class: "btn btn-ghost btn-sm" %>
        </div>
      </div>
    </div>
  </div>
</div>
